{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "lib": ["ES2022"],
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
