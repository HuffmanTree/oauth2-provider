{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "types"],
    "plugins": [{
      "name": "typescript-eslint-language-service"
    }]
  },
  "include": ["src", "types"],
  "exclude": ["dist", "node_modules", "test"]
}
